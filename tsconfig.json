{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowUmdGlobalAccess": true,
        "declaration": false,
        "sourceMap": false,
        "allowJs": true,
        "outDir": "dist",

        "esModuleInterop": true,
        "importHelpers": false,
    },
    "include": [
        "global.d.ts",
        "**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}